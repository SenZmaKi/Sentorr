{
  "include": ["src/**/*.ts", "src/**/*", "src/**/*.svelte", "index.html"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$backend/*": ["src/backend/*"],
      "$frontend/*": ["./*"],
      "@/*": ["src/*"],
      "$test/*": ["test/*"]
    },
    "verbatimModuleSyntax": true,
    "module": "NodeNext",
    "moduleResolution": "Node",
    "useDefineForClassFields": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
